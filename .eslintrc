{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "indent": [ "error", 2 ],
    "quotes": [ "warn", "single", "avoid-escape" ],
    "linebreak-style": [ "error", "unix" ],
    "semi": [ "error", "always" ],
    "no-console": "warn",
    "no-debugger": "warn",
    "arrow-spacing": "error"
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "jasmine": true
  }
}